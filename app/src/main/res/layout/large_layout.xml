<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/largelayout"
    android:layout_width="208dp"
    android:layout_height="72dp"
    android:background="#F24a4a4a"
    >

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/compresslayout"
            android:layout_width="32dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/compressbtn"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mo_compress"

                ></ImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/backbtn"

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mo_backwardround_10"

                ></ImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/largeplaybtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mo_play_fill"
                android:visibility="invisible"

                ></ImageButton>

            <ImageButton
                android:id="@+id/largepausebtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mo_pause_fill"

                ></ImageButton>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/forwardroundbtn"

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mo_forwardround_10"

                ></ImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/largecloselayout"
            android:layout_width="32dp"
            android:layout_height="48dp">

            <ImageButton
                android:id="@+id/largeclosebtn"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mo_close_mt"></ImageButton>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_button">

        <TextView
            android:id="@+id/tittletextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:text="11111"
            android:textColor="#9b9b9b"
            android:textSize="10dp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="4dp">

            <SeekBar

                android:id="@+id/large_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-20dp"
                android:layout_marginStart="-20dp"
                android:background="@android:color/transparent"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="4dp"
                android:paddingEnd="28dp"
                android:paddingStart="28dp"
                android:progress="0"
                android:progressDrawable="@drawable/play_seekbar_bg"
                android:splitTrack="false"
                android:thumb="@drawable/seekbarthumb"
                android:thumbOffset="10px"

                />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">


        <TextView
            android:id="@+id/endtimetexview"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:text="22222"
            android:textColor="#9b9b9b"
            android:textSize="8dp"></TextView>

        <TextView
            android:id="@+id/finaltimetextview"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="11111"
            android:textColor="#9b9b9b"
            android:textSize="8dp"></TextView>

    </RelativeLayout>

</RelativeLayout>

