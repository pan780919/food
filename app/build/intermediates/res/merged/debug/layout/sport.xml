<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget35"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/myb"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/widget36"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="#ffffccff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget37"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffccff"
            android:gravity="center"
            android:text="&#39135;&#29289;&#25885;&#21462;"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"></TextView>
    </TableRow>

    <TableRow
        android:id="@+id/widget38"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#39135;&#29289;&#32317;&#39006;"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <Spinner
            android:id="@+id/foodkind"
            android:layout_width="226px"
            android:layout_height="60px"></Spinner>
    </TableRow>

    <TableRow
        android:id="@+id/widget131"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <Button
                android:id="@+id/button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="選擇日期" />

            <TextView
                android:id="@+id/mdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" 顯示日期" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/widget13"
        android:layout_width="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_height="68dp">

        <TextView
            android:id="@+id/wmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食物"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <Button
            android:id="@+id/foodchoice"
            android:layout_width="150dp"
            android:background="@drawable/buttonbg"
            android:padding="20dp"
            android:text="請選擇"
            android:layout_height="50dp"></Button>
    </TableRow>


    <TableRow
        android:id="@+id/widget123"
        android:layout_width="fill_parent"
        android:layout_height="144dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="200dp">


            <TextView
                android:id="@+id/showlist"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:text="清單"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </ScrollView>
    </TableRow>

    <TableRow
        android:id="@+id/wi"
        android:layout_width="320dp"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cal"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:background="@drawable/buttonbg"
            android:padding="20dp"
            android:text="計算" />

        <Button
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:background="@drawable/buttonbg"
            android:gravity="center"
            android:padding="20dp"
            android:text="清除" />

        <Button
            android:id="@+id/exit"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:background="@drawable/buttonbg"
            android:gravity="center"
            android:padding="20dp"
            android:text="取消" />
    </TableRow>

</LinearLayout>
